#!/bin/bash
set -e

# Install Python dependencies
echo "Installing Python dependencies..."
pip3 install --user requests

# Make quickrepo executable
chmod +x /usr/local/bin/quickrepo

echo "QuickRepo installation completed successfully!"
echo "You can now run 'quickrepo' from anywhere in your terminal."
echo ""
echo "To get started:"
echo "  quickrepo --help"
echo ""
echo "Make sure you have a GitHub token configured:"
echo "  gh auth login"
